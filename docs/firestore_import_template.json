  "validation_rules": {
    "required_fields": {
      "tournaments": ["name", "date"],
      "teams": ["tournamentId", "name"],
      "players": ["teamId", "name"],
      "matches": ["tournamentId", "team1", "team2"],
      "goals": ["matchId", "tournamentId", "playerId", "teamId", "minute"]
    },
    "data_types": {
      "tournament_date": "ISO date string (YYYY-MM-DD)",
      "scores": "non-negative integers",
      "duration": "seconds (0-7200)",
      "minute": "positive integer (1-999)",
      "hat": "enum: 'first' or 'second'",
      "status": "enum: 'setup', 'active', 'completed'"
    },
    "constraints": {
      "teamSize": "2-6 players per team",
      "rounds": "1-10 rounds per tournament",
      "player_names": "unique within team",
      "team_names": "unique within tournament"
    }
  },
  "import_instructions": {
    "firebase_cli": [
      "firebase firestore:import ./import_data/ --collection-ids tournaments,teams,players,matches,goals",
      "firebase firestore:import ./import_data/tournaments --collection-ids tournaments"
    ],
    "batch_processing": {
      "step_1": "Create directory structure: import_data/{tournaments,teams,players,matches,goals}/",
      "step_2": "Place JSON files in respective collection directories",
      "step_3": "Run Firebase CLI import command",
      "step_4": "Verify data integrity using app's data cleanup utilities"
    }
  }
